$open_color = #00E676
$closed_color = #FF1744
$error_color = #f44e03

html
  font-family: 'Roboto', sans-serif;
  -webkit-font-smoothing: antialiased;
  color: #888;

body, h1, h2, h3, h4, h5, h6
  margin: 0;

body
  font-size: 15px;
  line-height: 24px;

body
  font-size: 15px;
  line-height: 24px;


.input-screen
  margin-top: 20px;
  text-align: center;

  .message
    color: $error_color;

  .action-buttons
    margin-top: 20px;
    .action-button
      margin: 20px;


.places-component
  .place
    .status.open
      background-color: $open_color
      border-radius: 12px
    .status.closed
      background-color: $closed_color
      border-radius: 4px

.place-component
  text-align: center;

  .place-name
    margin: 32px;
    font-size: 3em
    font-weight: normal;

  .status
    font-size: 5em;
    font-weight: bold;
    color: #03A9F4;
    border: 8px solid;
    display: inline-block;
    padding: 32px;
    margin: 24px 0;
    border-radius: 24px;

  .status.OPEN
    color: $open_color;
    border-color: $open_color;

  .status.CLOSED
    color: $closed_color;
    border-color: $closed_color;


.user
  .user-name
    text-align: center;
    font-size: 3em;
    margin: 20px;

  .user-info
    display: flex;
    justify-content: center;
    margin-top: 40px;

  .user-edit-button
    display: block;
    text-align: center;
    margin-top: 20px;


.user-edit-component
  margin-top: 20px;
  text-align: center;

  .message
    color: $error_color;

  .user-update-button
    margin-top: 20px;
    margin-right: 20px;


.attribute-section
  display: table;

  .attribute
    display: table-row;
    height: 40px;

    .attribute-label
      width: 120px;
      text-align: right;
      display: table-cell;

    .attribute-content
      display: table-cell;
      text-align: left;
      padding-left: 60px;


.loading
  display: flex;
  justify-content: center;
  margin-top: 40px;
