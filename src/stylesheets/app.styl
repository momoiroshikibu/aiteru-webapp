$error_color = #f44e03

html
  font-family: 'Roboto', sans-serif;
  -webkit-font-smoothing: antialiased;
  color: #888;

body, h1, h2, h3, h4, h5, h6
  margin: 0;

body
  font-size: 15px;
  line-height: 24px;

body
  font-size: 15px;
  line-height: 24px;

.login-component
  margin-top: 20px;
  text-align: center;

  .message
    color: $error_color;

  .login-button
    margin-top: 20px;

.places-component
  .place
    font-weight: bold !important
    .open
      background-color: #86cf4d
      border-radius: 12px
    .closed
      background-color: #cf554d
      border-radius: 4px

.place-component
  text-align: center;

  .place-name
    margin: 20px;
    font-size: 3em

  .place-is-open
    font-size: 4em;
    font-weight: bold;
    color: #03A9F4;
    border: 5px solid;
    display: inline-block;
    padding: 20px;
    margin: 24px 0;
    border-radius: 10px;

  .place-is-open.OPEN
    color: #03A9F4;
    border-color: #03A9F4;

  .place-is-open.CLOSED
    color: $error_color;
    border-color: $error_color;

  .place-info
    display: flex;
    justify-content: center;
    margin-top: 40px;

.place-new-component
  margin-top: 20px;
  text-align: center;

  .message
    color: $error_color;

  .place-create-button
    margin-top: 20px;


.user
  .user-name
    text-align: center;
    font-size: 3em;
    margin: 20px;

  .user-info
    display: flex;
    justify-content: center;
    margin-top: 40px;

.user-new-component
  margin-top: 20px;
  text-align: center;

  .message
    color: $error_color;

  .user-create-button
    margin-top: 20px;


.attribute-section
  display: table;

  .attribute
    display: table-row;
    height: 40px;

    .attribute-label
      width: 120px;
      text-align: right;
      display: table-cell;

    .attribute-content
      display: table-cell;
      text-align: left;
      padding-left: 60px;


.loading
  display: flex;
  justify-content: center;
  margin-top: 40px;
